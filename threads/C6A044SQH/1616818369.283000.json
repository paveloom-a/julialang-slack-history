:[{"type":"rich_text","block_id":"b2tj","elements":[{"type":"rich_text_section","elements":[{"type":"text","text":"moving out of the land of python (Julia uses 1-based indexing)\n"}]},{"type":"rich_text_preformatted","elements":[{"type":"text","text":"testpairs = [[1,2], [3,4], [5,6], [7,8], [9,0]]\nzerobased = [0, 1, 0, 1, 0]\nindices = zerobased .+ 1 # [1, 2, 1, 2, 1]\nresult = map((testpair, index) -> testpair[index], testpairs, indices)\n\n# result == [1, 4, 5, 8, 9]"}]}]}],"thread_ts":"1616818369.283000","parent_user_id":"U01G5M1DY21"}]